// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  pages     Page[]
  favorites Favorite[]
  pageViews PageView[]

  @@index([email])
}

model Page {
  id          String    @id @default(uuid())
  title       String
  content     String?   @db.Text
  icon        String?
  coverImage  String?
  isPublished Boolean   @default(false)
  isArchived  Boolean   @default(false)
  isFavorite  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  parentId String?
  parent   Page?   @relation("PageToPage", fields: [parentId], references: [id], onDelete: Cascade)
  children Page[]  @relation("PageToPage")

  favorites Favorite[]

  database    Database?
  databaseRow DatabaseRow? @relation("RowPage")
  isDatabase  Boolean      @default(false)

  linkedDatabases LinkedDatabase[]

  // YENİ: Sıralama için
  order       Int       @default(0)
  
  // YENİ: Son ziyaret takibi (user başına)
  pageViews   PageView[]
  
  // YENİ: Backlinks için - bu sayfadan link verilen sayfalar
  outgoingLinks PageLink[] @relation("OutgoingLinks")
  // Bu sayfaya link veren sayfalar
  incomingLinks PageLink[] @relation("IncomingLinks")

  @@index([userId])
  @@index([parentId])
  @@index([isArchived])
  @@index([isPublished])
}

model Favorite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  pageId String
  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([userId, pageId])
  @@index([userId])
  @@index([pageId])
}

// YENİ: Sayfa ziyaret kaydı (recent pages için)
model PageView {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  viewedAt  DateTime @default(now())
  
  @@unique([userId, pageId])
  @@index([userId, viewedAt(sort: Desc)])
  @@index([pageId])
}

// YENİ: Sayfa linkleri (backlinks için)
model PageLink {
  id           String   @id @default(uuid())
  sourcePageId String
  sourcePage   Page     @relation("OutgoingLinks", fields: [sourcePageId], references: [id], onDelete: Cascade)
  targetPageId String
  targetPage   Page     @relation("IncomingLinks", fields: [targetPageId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  
  @@unique([sourcePageId, targetPageId])
  @@index([sourcePageId])
  @@index([targetPageId])
}

// Database - Page ile 1:1 ilişki (her database bir sayfa)
model Database {
  id          String   @id @default(uuid())
  pageId      String   @unique
  page        Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  properties  Property[]
  rows        DatabaseRow[]
  defaultView String   @default("table") // table, board, calendar, gallery, list
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  templates       DatabaseTemplate[]
  linkedDatabases LinkedDatabase[]   @relation("LinkedDatabases")
  
  @@index([pageId])
}

// Property (Column) - Sütun tanımları
model Property {
  id          String       @id @default(uuid())
  name        String
  type        PropertyType
  databaseId  String
  database    Database     @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  order       Int          @default(0)
  width       Int          @default(200)
  isVisible   Boolean      @default(true)
  options     Json?        // Select options: [{id, name, color}]
  cells       Cell[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  
  // YENİ: Relation yapılandırması
  relationConfig Json?
  // {
  //   targetDatabaseId: string,     // Hedef database
  //   bidirectional: boolean,       // Çift yönlü mü?
  //   reversePropertyId?: string,   // Ters property ID
  //   limitType: 'none' | 'one'     // Tek mi çok mu link
  // }
  
  // YENİ: Rollup yapılandırması
  rollupConfig Json?
  // {
  //   relationPropertyId: string,   // Hangi relation
  //   targetPropertyId: string,     // Hangi property'den
  //   aggregation: string           // Aggregation tipi
  // }
  
  // YENİ: Formula yapılandırması
  formulaConfig Json?
  // {
  //   expression: string,           // "prop('Price') * prop('Qty')"
  //   resultType: 'string' | 'number' | 'boolean' | 'date'
  // }

  @@index([databaseId])
}

// Property Types Enum
enum PropertyType {
  TITLE       // Zorunlu - her database'de bir tane
  TEXT
  NUMBER
  SELECT
  MULTI_SELECT
  DATE
  CHECKBOX
  URL
  EMAIL
  PHONE
  CREATED_TIME
  UPDATED_TIME
  
  // YENİ: İleri tipler
  RELATION      // Database ilişkisi
  ROLLUP        // Relation üzerinden hesaplama
  FORMULA       // Formül ile hesaplama
}

// Database Row - Satırlar (aynı zamanda alt sayfa)
model DatabaseRow {
  id          String   @id @default(uuid())
  databaseId  String
  database    Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  pageId      String?  @unique // Her satır bir sayfa olabilir (açılabilir)
  page        Page?    @relation("RowPage", fields: [pageId], references: [id])
  cells       Cell[]
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([databaseId])
  @@index([order])
}

// Cell - Hücre değerleri
model Cell {
  id         String      @id @default(uuid())
  propertyId String
  property   Property    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  rowId      String
  row        DatabaseRow @relation(fields: [rowId], references: [id], onDelete: Cascade)
  value      Json?       // Dinamik değer storage
  
  @@unique([propertyId, rowId])
  @@index([propertyId])
  @@index([rowId])
}

// YENİ: Linked Database (Database view alias)
model LinkedDatabase {
  id              String   @id @default(uuid())
  pageId          String   // Hangi sayfada gösteriliyor
  page            Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  sourceDatabaseId String  // Kaynak database
  sourceDatabase  Database @relation("LinkedDatabases", fields: [sourceDatabaseId], references: [id])
  title           String?  // Override title
  viewConfig      Json?    // View-specific config (filters, sorts, hidden columns)
  createdAt       DateTime @default(now())
  
  @@index([pageId])
  @@index([sourceDatabaseId])
}

// YENİ: Database Template
model DatabaseTemplate {
  id          String   @id @default(uuid())
  databaseId  String
  database    Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  name        String   @default("New Template")
  icon        String?
  content     String?  @db.Text   // BlockNote JSON (sayfa içeriği)
  defaultCells Json?              // { propertyId: defaultValue }
  isDefault   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([databaseId])
}
