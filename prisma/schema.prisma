// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts  Account[]
  sessions  Session[]
  pages     Page[]
  favorites Favorite[]
  pageViews PageView[]
  history   PageHistory[]
  
  // Paylaşım ilişkileri
  sharedPages     PageShare[]   @relation("SharedPages")
  sentInvites     PageShare[]   @relation("SentInvites")
  
  // Yorum ilişkileri
  comments        Comment[]
  
  // Mention ilişkileri
  mentions        UserMention[] @relation("Mentions")
  mentionedOthers UserMention[] @relation("MentionedBy")
  
  // Bildirimler
  notifications   Notification[]
  actorNotifications Notification[] @relation("NotificationActor")
  
  // Presence
  presence        UserPresence[]

  @@index([email])
}

model Page {
  id          String    @id @default(uuid())
  title       String
  content     String?   @db.Text
  icon        String?
  coverImage  String?
  isPublished Boolean   @default(false)
  isArchived  Boolean   @default(false)
  isFavorite  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  parentId String?
  parent   Page?   @relation("PageToPage", fields: [parentId], references: [id], onDelete: Cascade)
  children Page[]  @relation("PageToPage")

  favorites Favorite[]

  database    Database?
  databaseRow DatabaseRow? @relation("RowPage")
  isDatabase  Boolean      @default(false)

  linkedDatabases LinkedDatabase[]

  // YENİ: Sıralama için
  order       Int       @default(0)
  
  // YENİ: Son ziyaret takibi (user başına)
  pageViews   PageView[]
  
  // YENİ: Backlinks için - bu sayfadan link verilen sayfalar
  outgoingLinks PageLink[] @relation("OutgoingLinks")
  // Bu sayfaya link veren sayfalar
  incomingLinks PageLink[] @relation("IncomingLinks")

  // Paylaşım
  shares          PageShare[]
  
  // Yorumlar
  comments        Comment[]
  
  // Mentions (sayfa içeriğinde)
  mentions        UserMention[]
  
  // Notifications
  notifications   Notification[]
  
  // Presence
  activeUsers     UserPresence[]
  
  // History
  history         PageHistory[]

  @@index([userId])
  @@index([parentId])
  @@index([isArchived])
  @@index([isPublished])
}

model Favorite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  pageId String
  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([userId, pageId])
  @@index([userId])
  @@index([pageId])
}

// YENİ: Sayfa ziyaret kaydı (recent pages için)
model PageView {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  viewedAt  DateTime @default(now())
  
  @@unique([userId, pageId])
  @@index([userId, viewedAt(sort: Desc)])
  @@index([pageId])
}

// YENİ: Sayfa linkleri (backlinks için)
model PageLink {
  id           String   @id @default(uuid())
  sourcePageId String
  sourcePage   Page     @relation("OutgoingLinks", fields: [sourcePageId], references: [id], onDelete: Cascade)
  targetPageId String
  targetPage   Page     @relation("IncomingLinks", fields: [targetPageId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  
  @@unique([sourcePageId, targetPageId])
  @@index([sourcePageId])
  @@index([targetPageId])
}

// Database - Page ile 1:1 ilişki (her database bir sayfa)
model Database {
  id          String   @id @default(uuid())
  pageId      String   @unique
  page        Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  properties  Property[]
  rows        DatabaseRow[]
  defaultView String   @default("table") // table, board, calendar, gallery, list
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  templates       DatabaseTemplate[]
  linkedDatabases LinkedDatabase[]   @relation("LinkedDatabases")
  
  @@index([pageId])
}

// Property (Column) - Sütun tanımları
model Property {
  id          String       @id @default(uuid())
  name        String
  type        PropertyType
  databaseId  String
  database    Database     @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  order       Int          @default(0)
  width       Int          @default(200)
  isVisible   Boolean      @default(true)
  options     Json?        // Select options: [{id, name, color}]
  cells       Cell[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  
  // YENİ: Relation yapılandırması
  relationConfig Json?
  // {
  //   targetDatabaseId: string,     // Hedef database
  //   bidirectional: boolean,       // Çift yönlü mü?
  //   reversePropertyId?: string,   // Ters property ID
  //   limitType: 'none' | 'one'     // Tek mi çok mu link
  // }
  
  // YENİ: Rollup yapılandırması
  rollupConfig Json?
  // {
  //   relationPropertyId: string,   // Hangi relation
  //   targetPropertyId: string,     // Hangi property'den
  //   aggregation: string           // Aggregation tipi
  // }
  
  // YENİ: Formula yapılandırması
  formulaConfig Json?
  // {
  //   expression: string,           // "prop('Price') * prop('Qty')"
  //   resultType: 'string' | 'number' | 'boolean' | 'date'
  // }

  @@index([databaseId])
}

// Property Types Enum
enum PropertyType {
  TITLE       // Zorunlu - her database'de bir tane
  TEXT
  NUMBER
  SELECT
  MULTI_SELECT
  DATE
  CHECKBOX
  URL
  EMAIL
  PHONE
  CREATED_TIME
  UPDATED_TIME
  
  RELATION      // Database ilişkisi
  ROLLUP        // Relation üzerinden hesaplama
  FORMULA       // Formül ile hesaplama
  CREATED_BY
  LAST_EDITED_BY
}

// Database Row - Satırlar (aynı zamanda alt sayfa)
model DatabaseRow {
  id          String   @id @default(uuid())
  databaseId  String
  database    Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  pageId      String?  @unique // Her satır bir sayfa olabilir (açılabilir)
  page        Page?    @relation("RowPage", fields: [pageId], references: [id])
  cells       Cell[]
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([databaseId])
  @@index([order])
}

// Cell - Hücre değerleri
model Cell {
  id         String      @id @default(uuid())
  propertyId String
  property   Property    @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  rowId      String
  row        DatabaseRow @relation(fields: [rowId], references: [id], onDelete: Cascade)
  value      Json?       // Dinamik değer storage
  
  @@unique([propertyId, rowId])
  @@index([propertyId])
  @@index([rowId])
}

// YENİ: Linked Database (Database view alias)
model LinkedDatabase {
  id              String   @id @default(uuid())
  pageId          String   // Hangi sayfada gösteriliyor
  page            Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  sourceDatabaseId String  // Kaynak database
  sourceDatabase  Database @relation("LinkedDatabases", fields: [sourceDatabaseId], references: [id])
  title           String?  // Override title
  viewConfig      Json?    // View-specific config (filters, sorts, hidden columns)
  createdAt       DateTime @default(now())
  
  @@index([pageId])
  @@index([sourceDatabaseId])
}

// YENİ: Database Template
model DatabaseTemplate {
  id          String   @id @default(uuid())
  databaseId  String
  database    Database @relation(fields: [databaseId], references: [id], onDelete: Cascade)
  name        String   @default("New Template")
  icon        String?
  content     String?  @db.Text   // BlockNote JSON (sayfa içeriği)
  defaultCells Json?              // { propertyId: defaultValue }
  isDefault   Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([databaseId])
}

// ============ SHARING & PERMISSIONS ============

// Sayfa paylaşım kayıtları
model PageShare {
  id          String      @id @default(uuid())
  pageId      String
  page        Page        @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  // Paylaşılan kişi (ikisinden biri dolu olmalı)
  userId      String?     // Mevcut kullanıcı ile paylaşım
  user        User?       @relation("SharedPages", fields: [userId], references: [id], onDelete: Cascade)
  email       String?     // Email ile davet (henüz üye değilse)
  
  // İzin seviyesi
  role        ShareRole   @default(VIEWER)
  
  // Misafir erişimi için
  token       String?     @unique  // Guest link token
  tokenExpiresAt DateTime?
  
  // Audit
  invitedBy   String
  invitedByUser User      @relation("SentInvites", fields: [invitedBy], references: [id])
  createdAt   DateTime    @default(now())
  acceptedAt  DateTime?   // Email davetleri için
  
  @@unique([pageId, userId])
  @@unique([pageId, email])
  @@index([pageId])
  @@index([userId])
  @@index([token])
}

enum ShareRole {
  VIEWER      // Sadece görüntüleme
  COMMENTER   // Görüntüleme + yorum
  EDITOR      // Görüntüleme + yorum + düzenleme
  ADMIN       // Tam erişim (paylaşım dahil)
}

// ============ COMMENTS ============

model Comment {
  id          String    @id @default(uuid())
  content     String    @db.Text
  
  // Sayfa ilişkisi
  pageId      String
  page        Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  // Yazar
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Thread (yanıtlar)
  parentId    String?
  parent      Comment?  @relation("CommentThread", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentThread")
  
  // Blok seviyesi yorum (opsiyonel)
  blockId     String?   // BlockNote block ID
  
  // Durum
  resolved    Boolean   @default(false)
  resolvedBy  String?
  resolvedAt  DateTime?
  
  // Mentions
  mentions    UserMention[]
  
  // Audit
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  editedAt    DateTime? // Düzenlendiğinde
  
  @@index([pageId])
  @@index([parentId])
  @@index([blockId])
  @@index([createdAt(sort: Desc)])
}

// ============ USER MENTIONS ============

model UserMention {
  id          String    @id @default(uuid())
  
  // Mention konumu
  commentId   String?
  comment     Comment?  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  pageId      String?   // Sayfa içeriğinde mention
  page        Page?     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  // Etiketlenen kullanıcı
  userId      String
  user        User      @relation("Mentions", fields: [userId], references: [id], onDelete: Cascade)
  
  // Etiketleyen kullanıcı
  mentionedBy String
  mentionedByUser User  @relation("MentionedBy", fields: [mentionedBy], references: [id])
  
  // Okundu durumu
  read        Boolean   @default(false)
  readAt      DateTime?
  
  createdAt   DateTime  @default(now())
  
  @@index([userId, read])
  @@index([commentId])
  @@index([pageId])
}

// ============ NOTIFICATIONS ============

model Notification {
  id          String           @id @default(uuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type        NotificationType
  title       String
  message     String?
  
  // İlgili kayıtlar
  pageId      String?
  page        Page?            @relation(fields: [pageId], references: [id], onDelete: Cascade)
  commentId   String?
  actorId     String?          // Aksiyonu yapan kullanıcı
  actor       User?            @relation("NotificationActor", fields: [actorId], references: [id])
  
  // Durum
  read        Boolean          @default(false)
  readAt      DateTime?
  
  createdAt   DateTime         @default(now())
  
  @@index([userId, read, createdAt(sort: Desc)])
}

enum NotificationType {
  COMMENT_ADDED      // Yeni yorum
  COMMENT_REPLY      // Yoruma yanıt
  MENTION            // @mention
  PAGE_SHARED        // Sayfa paylaşıldı
  SHARE_ACCEPTED     // Davet kabul edildi
  PAGE_EDITED        // Sayfa düzenlendi (izlenenler için)
}

// ============ PRESENCE (Opsiyonel - Cache'de tutulabilir) ============

model UserPresence {
  id          String    @id @default(uuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageId      String?
  page        Page?     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  
  status      PresenceStatus @default(ONLINE)
  lastSeen    DateTime  @default(now())
  cursorPosition Json?  // { blockId, offset }
  
  @@unique([userId, pageId])
  @@index([pageId])
}

enum PresenceStatus {
  ONLINE
  AWAY
  OFFLINE
}

// ============ PAGE HISTORY ============

model PageHistory {
  id        String   @id @default(uuid())
  pageId    String
  page      Page     @relation(fields: [pageId], references: [id], onDelete: Cascade)
  content   String?  @db.Text
  savedAt   DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([pageId])
  @@index([savedAt(sort: Desc)])
}
